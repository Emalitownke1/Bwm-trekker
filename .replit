modules = ["nodejs-20", "web"]
run = "node body.js"

[nix]
channel = "stable-24_05"

[deployment]
run = ["sh", "-c", "node body.js"]

[[ports]]
localPort = 8080
externalPort = 80

[workflows]
runButton = "Run"

[[workflows.workflow]]
name = "Run"
author = 40506544
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "yarn install --registry https://registry.npmjs.org --network-timeout 100000"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "yarn start"

[env]
REPLIT_DISABLE_PACKAGE_LAYER = "1"
REPLIT_KEEP_PACKAGE_DEV_DEPENDENCIES = "1"
